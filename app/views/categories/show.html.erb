<div class="category-title">
    <h4><%= @category.category_name %> <sub class="title-desc"><%= @category.products.count %> Products</sub> </h4>
</div>

<div class="products-container">
  <div class="row">
    <% @products.each do |product| %>
      <a href="/products/<%= product.id %>">
        <div class="col s3 ">
          <div class="card" style="padding: 0px;">
            <div class="card-image">
              <li><%= image_tag product.image, class: 'product-card-big' %></li>
            </div>
            <div class="card-content">
              <h6><%= product.product_name %></h6>
              <p><%= product.product_description[0, 30] + "..." %> <%= link_to 'more' %></p>
            </div>
            <div class="card-action">
              <div class="row">
                <div class="col s6">
                  <i class="material-icons" onclick="addToCart(<%= product.id %>)">add_shopping_cart</i>
                </div>
                <div class="col s6">
                  <div class="money-tile">
                    <%= number_to_currency(product.price, :unit => ' KES') %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
