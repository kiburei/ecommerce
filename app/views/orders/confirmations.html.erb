<div class="orders">
  <div class="card">
    <h5>Order Successfully Placed!</h5>
    <table class="stripped">
      <thead>
        <th>Order Number</th>
        <th>Customer</th>
        <th>Order Item(s)</th>
        <th>Order Total</th>
        <th>Payment Method</th>
        <th>Drop Off</th>
        <th>Status</th>
        <th>Date</th>
        <th></th>
      </thead>
      <tbody>
          <tr>
           <td><%= current_shop.orders.last.id %></td>
            <td><%= current_shop.orders.last.client_name %></td>
            <td>
               <ul>
                 <% current_shop.orders.last.order_items.each do |item| %>
                   <li><%= item.product.product_name %>(<%= item.quantity %>)</li>
                   <li><%= item.size%></li>
                 <% end %>
               </ul>
            </td>
            <td><%= number_to_currency(current_shop.orders.last.order_total, :unit => 'KES ') %></td>
            <td><%= current_shop.orders.last.order_payment_method %></td>
            <td><%= current_shop.orders.last.delivery %></td>
            <td><%= current_shop.orders.last.order_status %></td>
            <td><%= current_shop.orders.last.created_at.to_date %></td>
      </tbody>
    </table>
  </div>
</div>